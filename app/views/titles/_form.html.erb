<%= form_with(model: title) do |form| %>
  <% if title.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(title.errors.count, "error") %> prohibited this title from being saved:</h2>

      <ul>
        <% title.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_area :text %>
  </div>

  <div>
    <%= form.label :comments_counter, style: "display: block" %>
    <%= form.number_field :comments_counter %>
  </div>

  <div>
    <%= form.label :likes_counter, style: "display: block" %>
    <%= form.number_field :likes_counter %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
